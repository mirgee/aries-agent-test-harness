FROM ghcr.io/hyperledger/aries-vcx/libvcx:0.42.0

USER root

ARG UID=1001
ARG GID=1001

ENV RUST_LOG=warning

RUN addgroup -g $GID indy && adduser -u $UID -D -G indy indy

RUN apk update && apk upgrade && \
    apk add --no-cache \
        build-base \
        curl

USER indy
WORKDIR /home/indy/aries-vcx-backchannel

ARG RUST_VER="1.62.1"
RUN curl https://sh.rustup.rs -sSf | sh -s -- -y --default-toolchain $RUST_VER --default-host x86_64-unknown-linux-musl
ENV PATH="/home/indy/.cargo/bin:$PATH" RUSTFLAGS="-C target-feature=-crt-static" X86_64_UNKNOWN_LINUX_MUSL_OPENSSL_NO_VENDOR=true

USER root
RUN chown -R indy:indy .
USER indy

RUN cargo new --bin aries-vcx-backchannel
WORKDIR ./aries-vcx-backchannel
COPY --chown=indy:indy ./aries-vcx/Cargo.lock ./aries-vcx/Cargo.toml ./
RUN cargo build
RUN rm src/*.rs
RUN rm ./target/debug/deps/aries_vcx_backchannel*
COPY --chown=indy:indy  ./aries-vcx/src ./src
COPY --chown=indy:indy  ./aries-vcx/resource ./resource
RUN cargo build

ENTRYPOINT ["./target/debug/aries-vcx-backchannel"]
